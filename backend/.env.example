PORT=8080
CLUSTER_URL=https://api.devnet.solana.com
PROGRAM_ID=ReplaceWithProgramId
RELAYER_KEYPAIR_PATH=/absolute/path/to/relayer-keypair.json
USDC_MINT=ReplaceWithDevnetUsdMint
HMAC_SECRET=replace-with-strong-secret
CORS_ORIGIN=http://localhost:5173

# Toggle webhook HMAC signature verification (true/false)
ENABLE_HMAC=false

# Optional: webhook timestamp tolerance in seconds (default 300)
WEBHOOK_TOLERANCE_SEC=300

# Optional: override SQLite file path (used in tests/CI)
# DB_PATH=./data/dev.sqlite

# Enable dev-only USDC faucet endpoint
FAUCET_ENABLED=false

# Require listings to be signed by the seller/admin wallet(s) specified below
LISTINGS_REQUIRE_SIG=true

# Signature tolerance for listings (seconds)
LISTING_SIG_TOL_SEC=300

# Comma-separated list of seller/admin wallets that can create listings
ADMIN_WALLETS=<comma-separated seller/admin wallet(s)>

# Cache TTL for positions endpoint (milliseconds). Default 30000.
POSITIONS_TTL_MS=30000